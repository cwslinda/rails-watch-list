  <a class="navbar-brand">
  </a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <%= link_to "My List", lists_path, class: 'btn btn-flat'%>     <%= link_to "New List", new_list_path, class: 'btn btn-flat' %></a>
    </li>
  </ul>
</div>
</div>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1489599849927-2ee91cede3ba?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2940&q=80);">
  <div class="container">
    <h2 class="save"><%= @list.name %></h2>
  </div>
</div>
<div class="container">
  <div class="container mb-5">
    <div class="d-flex justify-content-between my-4">
      <span class="mb-2 d-block"><small><em class="text-muted"><%= "You haven't saved any movies yet!" if @list.movies.empty? %></em></small></span>
      <div>
        <%= link_to 'add a movie', new_list_bookmark_path(@list), class:'text-decoration-none' %>
      </div>
    </div>
  </div>
  <div class="container text-center">
    <h2 class="movie-tag pb-2"><%= (pluralize(@list.movies.size, 'Movie')) %></h2>
  </div>
  <% @list.movies.each do |movie| %>
    <div class="pb-3">
      <div class="card-product">
        <img src="<%= movie.poster_url %>" />
        <div class="card-product-infos">
          <h2 class="pb-2"><%=  movie.title %></h2>
          <p class="description"><%= movie.overview %></p>
          <p class="pt-2"><% (movie.rating / 2).times do %><i style="color:yellow;" class="fas fa-star"></i><% end %></p>
          <%= link_to icon("fas", "trash"), bookmark_path, method: :delete, class: 'btn btn-cancel', data: { confirm: 'Are you sure you want to delete this list?' } %>
        </div>
      </div>
    </div>
  <% end %>
  <%= link_to 'Back to Lists', lists_path, class:'pb-2' %>
</div>
